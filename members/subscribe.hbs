{{!< ../default}}

<div class="content-area">
  <main class="site-main">
    <div class="single">
      <header class="single-header kg-width-narrow">
        <h1 class="single-title">{{t "Choose your subscription"}}</h1>
        <div class="single-excerpt">
          {{t "Unlock full access to {site} and see the entire library of members-only content & updates" site=@site.title}}
        </div>
      </header>

      <div class="plan-selector plan-selector-free hidden-lg hidden-xl">
        <button class="button plan-selector-button" data-plan="free">{{t "Free"}}</button>
        <button class="button button-secondary plan-selector-button" data-plan="monthly">{{t "Monthly"}}</button>
        <button class="button button-secondary plan-selector-button" data-plan="yearly">{{t "Yearly"}}</button>
      </div>

      <div class="plan-list">
        {{> members/plan-free}}
        {{> members/plan-paid}}
      </div>
    </div>
  </main>
</div>