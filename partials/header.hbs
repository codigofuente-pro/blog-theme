<style>
  .logo-image {
    height: 45px;
    background-size: 100% 100%;
    background-position: center;
    background-image: url("{{@site.logo}}");
  }
  .theme-light .logo-image {
    background-image: url({{asset "images/logo-light.svg"}}) !important;
  }
  .theme-dark .logo-image {
    background-image: url({{asset "images/logo-dark.svg"}}) !important;
  }
  
</style>
<header class="site-header">
  <div class="header-left">
    <a class="logo" href="{{@site.url}}">
      {{#if @site.logo}}
        <img class="logo-image"  alt="{{@site.title}}" src="{{asset "images/fake-logo.png"}}">
      {{else}}
        <span class="logo-text">{{@site.title}}</span>
      {{/if}}
    </a>
  </div>
  {{#if @site.navigation}}
    <nav class="main-nav hidden-xs hidden-sm hidden-md">
      {{navigation}}
      {{#if @labs.members}}
        <button class="button-icon menu-item-button js-modal" data-modal="search" aria-label="Buscar">
          <svg class="icon"><use xlink:href="#magnify"></use></svg>
        </button>
      {{/if}}
    </nav>
    
    <button class="button-icon hidden-lg hidden-xl js-modal" data-modal="search" aria-label="Buscar">
      <svg class="icon"><use xlink:href="#magnify"></use></svg>
    </button>
    <div class="burger hidden-lg hidden-xl">
      <div class="burger-bar"></div>
      <div class="burger-bar"></div>
    </div>

    <div class="mobile-menu hidden-lg hidden-xl">
      <div class="container">
        <nav class="mobile-nav">
          {{navigation}}
          {{#if @labs.members}}
            {{#if @member}}
              <a class="menu-item members-account" href="{{@site.url}}/account/">{{t "Cuenta"}}</a>
              {{#unless @member.paid}}
                <a class="menu-item menu-item-cta members-upgrade" href="{{@site.url}}/upgrade/">{{t "Upgrade"}}</a>
              {{/unless}}
            {{else}}
              <a class="menu-item members-login" href="{{@site.url}}/signin/">{{t "Login"}}</a>
              <a class="menu-item menu-item-cta members-subscribe" href="{{@site.url}}/subscribe/">{{t "Suscribir"}}</a>
            {{/if}}
          {{/if}}
        </nav>
      </div>
    </div>
  {{/if}}
  <div class="header-right hidden-xs hidden-sm hidden-md">
    {{#if @labs.members}}
      {{#if @member}}
        <a class="menu-item members-account" href="{{@site.url}}/account/">{{t "Cuenta"}}</a>
        {{#unless @member.paid}}
          <a class="menu-item menu-item-cta members-upgrade" href="{{@site.url}}/upgrade/">{{t "Upgrade"}}</a>
        {{/unless}}
      {{else}}
        <a class="menu-item members-login" href="{{@site.url}}/signin/">{{t "Login"}}</a>
        <a class="menu-item menu-item-cta members-subscribe" href="{{@site.url}}/subscribe/">{{t "Suscribir"}}</a>
      {{/if}}
    {{else}}
      <button class="button-icon js-modal" data-modal="search" aria-label="Buscar">
        <svg class="icon"><use xlink:href="#magnify"></use></svg>
      </button>
    {{/if}}
  </div>
</header>

{{#is "post"}}
  {{#post}}
    <header class="sticky kg-width-full">
      <div class="sticky-title">{{title}}</div>
      <button class="button-icon sticky-toc-button" aria-label="Tabla de Contenidos">
        <svg class="icon"><use xlink:href="#table-of-contents"></use></svg>
        <div class="sticky-toc"></div>
      </button>
      <div class="sticky-track">
        <div class="sticky-progress"></div>
      </div>
    </header>
  {{/post}}
{{/is}}